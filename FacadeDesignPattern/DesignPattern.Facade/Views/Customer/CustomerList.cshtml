@model List<DesignPattern.Facade.DAL.Customer>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Müşteri Listesi</h1>

<div class="container mt-5">
    <table class="table table-hover table-center align-middle">
        <thead>
            <tr>
                <th>#</th>
                <th>Müşteri Adı</th>
                <th>Müşteri Soyadı</th>
                <th>Müşteri Şehri</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Surname</td>
                    <td>@item.City</td>
                </tr>
            }
        </tbody>
    </table>
</div>
<a href="/Customer/AddNewCustomer" class="btn btn-primary">Yeni Müşteri</a>