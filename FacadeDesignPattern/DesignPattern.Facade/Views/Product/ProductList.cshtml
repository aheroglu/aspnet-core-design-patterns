@model List<DesignPattern.Facade.DAL.Product>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Ürün Listesi</h1>

<div class="container mt-5">
    <table class="table table-hover table-center align-middle">
        <thead>
            <tr>
                <th>#</th>
                <th>Ürün Adı</th>
                <th>Ürün Kategorisi</th>
                <th>Ürün Fiyatı</th>
                <th>Ürün Stok Sayısı</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Category</td>
                    <td>@item.Price</td>
                    <td>@item.Stock</td>
                </tr>
            }
        </tbody>
    </table>
</div>
<a href="/Product/AddNewProduct" class="btn btn-primary">Yeni Ürün</a>