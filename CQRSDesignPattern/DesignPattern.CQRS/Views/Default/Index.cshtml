@model List<GetProductQueryResult>

@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <table class="table table-hover text-center">
        <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Price</th>
                <th>Stock</th>
                <th>Operations</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Price ₺</td>
                    <td>@item.Stock</td>
                    <td>
                        <a href="/Default/GetProduct/@item.Id" class="btn btn-dark">Details</a>
                        <a href="/Default/Delete/@item.Id" class="btn btn-danger">Delete</a>
                        <a href="/Default/Edit/@item.Id" class="btn btn-success">Edit</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a href="/Default/Add" class="btn btn-primary">Add</a>
</div>