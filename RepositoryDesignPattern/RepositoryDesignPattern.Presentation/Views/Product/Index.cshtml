@model List<RepositoryDesignPattern.Entity.Concrete.Product>

@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5 w-50">
    <div class="jumbotron">
        <a href="/Product/Add" class="btn btn-info mb-3">Ekle</a>
        <table class="table table-hover text-center align-middle">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Ürün Adı</th>
                    <th>Kategori</th>
                    <th>Stok</th>
                    <th>Fiyat</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.Category.Name</td>
                        <td>@item.Stock</td>
                        <td>@item.Price</td>
                        <td>
                            <a href="/Product/Delete/@item.Id" class="btn btn-danger">Sil</a>
                            <a href="/Product/Edit/@item.Id" class="btn btn-success">Güncelle</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>