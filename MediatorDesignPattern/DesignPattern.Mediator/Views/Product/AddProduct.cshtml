@model DesignPattern.Mediator.MediatorPattern.Commands.CreateProductCommand

@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <form method="post">
        <div class="row mb-3">
            <label>Ürün Adı</label>
            <input asp-for="Name" type="text" class="form-control" />
        </div>
        <div class="row mb-3">
            <label>Ürün Stok</label>
            <input asp-for="Stock" type="text" class="form-control" />
        </div>
        <div class="row mb-3">
            <label>Ürün Stok Türü</label>
            <input asp-for="StockType" type="text" class="form-control" />
        </div>
        <div class="row mb-3">
            <label>Ürün Kategorisi</label>
            <input asp-for="Category" type="text" class="form-control" />
        </div>
        <div class="row mb-3">
            <button class="btn btn-primary">Ekle</button>
        </div>
    </form>
</div>