@model List<DesignPattern.Mediator.MediatorPattern.Results.GetAllProductQueryResult>

@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <div class="table-responsive">
        <table class="table table-borderless table-hover text-center">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Ürün Adı</th>
                    <th>Fiyatı</th>
                    <th>Stok Sayısı</th>
                    <th>Stok Türü</th>
                    <th>Ürün Kategorisi</th>
                    <th>Sil</th>
                    <th>Güncelle</th>
                    <th>Detaylar</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.Price</td>
                        <td>@item.Stock</td>
                        <td>@item.StockType</td>
                        <td>@item.Category</td>
                        <td><a href="/Product/DeleteProduct/@item.Id" class="btn btn-danger">Sil</a></td>
                        <td><a href="/Product/UpdateProduct/@item.Id" class="btn btn-success">Güncelle</a></td>
                        <td><a href="/Product/GetProduct/@item.Id" class="btn btn-dark">Detaylar</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <a href="/Product/AddProduct" class="btn btn-info">Yeni Ürün</a>
</div>